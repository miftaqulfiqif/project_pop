<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Customer"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/main" />

        <ImageView
            android:id="@+id/btndetail"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/detail" />

        <ImageView
            android:id="@+id/belum"
            android:layout_toLeftOf="@id/btndetail"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/red_notif"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sudah"
            android:layout_toLeftOf="@id/btndetail"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/green_notif"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/skate"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/small_skate"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNotelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Telp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp" />

        <TextView
            android:id="@+id/notelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp" />

        <TextView
            android:id="@+id/tvPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertanyaan"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp" />

        <TextView
            android:id="@+id/pertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ini adalah pertanyaan"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp" />

        <ImageView
            android:id="@+id/fotoqna"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/grey_font"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRespon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respon"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp" />

        <TextView
            android:id="@+id/jawaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnhapus"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/delete"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/btnedit"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/edit"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>