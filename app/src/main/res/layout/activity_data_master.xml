<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cakraagro.cakraagroindonesia.Activity.KelolaDataMaster.KelolaDataMaster">

    <ImageView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:src="@drawable/header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="DATA MASTER"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="@drawable/bg_dasboard" />

    <TextView
        android:id="@+id/btndataadmin"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="DATA ADMIN"
        android:textColor="@color/main"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/btndatasalessecetary"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="DATA SECRETARY"
        android:textColor="@color/main"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btndatasupervisor"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="DATA SUPERVISOR"
        android:textColor="@color/main"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btndatademonstrator"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="DATA DEMONSTRATOR"
        android:textColor="@color/main"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btndatadistributor"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="DATA DISTRIBUTOR"
        android:textColor="@color/main"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btndatamanager"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="DATA MANAGER"
        android:textColor="@color/main"
        android:textSize="16dp"
        android:textStyle="bold" />

</LinearLayout>