<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cakraagro.cakraagroindonesia.Activity.Beranda.Homepage">
    <LinearLayout
        android:id="@+id/headerdataadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/header"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:text="HOMEPAGE"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:background="@drawable/bg_dasboard"/>
        <EditText
            android:id="@+id/judulberanda"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Judul Beranda"
            android:padding="15dp"
            android:gravity="top"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/deksripsiberanda"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Deskripsi Beranda"
            android:padding="15dp"
            android:gravity="top"/>
        <TextView
            android:id="@+id/btnPilihFoto"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:drawableStart="@drawable/uploadbtn"
            android:textSize="14sp"
            android:text="Upload Foto"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/custom_button_input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btnubah"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="Ubah"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/custom_btnsubmit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>