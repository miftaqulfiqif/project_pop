<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cakraagro.cakraagroindonesia.Activity.BonusDistributor.TambahBonusDistributor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:src="@drawable/header" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center"
                android:text="TAMBAH BONUS DISTRIBUTOR"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/bg_dasboard" />

            <EditText
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/custom_input"
                android:hint="Pilih Tanggal"
                android:inputType="none"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp" />

            <RelativeLayout
                android:id="@+id/viewspinnerdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/custom_input"
                    android:spinnerMode="dropdown"
                    android:paddingStart="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail"
                    android:layout_alignParentRight="true"
                    android:paddingRight="30dp"
                    android:paddingTop="7dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/totalpenjualan"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_input"
                android:gravity="center_vertical"
                android:hint="Masukkan Total Penjualan"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/bonuspenjualan"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_input"
                android:gravity="center_vertical"
                android:hint="Masukkan Bonus Penjualan"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/bonustahunan"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/custom_input"
                android:hint="Masukkan Bonus Tahunan"
                android:inputType="number"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingStart="15dp" />

            <EditText
                android:id="@+id/nomorinvoice"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/custom_input"
                android:hint="Masukkan Nomor Invoice"
                android:inputType="number"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/btnPilihFoto"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:drawableStart="@drawable/uploadbtn"
                android:textSize="14sp"
                android:text="Upload Foto"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/custom_button_input"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:id="@+id/foto"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:background="@color/grey_font"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/btntambah"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="Submit"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/custom_btnsubmit"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>