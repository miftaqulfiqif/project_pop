<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cakraagro.cakraagroindonesia.Activity.KelolaDataMaster.UbahDistributor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:text="UBAH DATA DISTRIBUTOR"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:background="@drawable/bg_dasboard"
            android:layout_marginBottom="25dp" />

        <EditText
            android:id="@+id/namadistributor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Nama Distributor"
            android:paddingStart="15dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/custom_input"
                android:spinnerMode="dropdown"
                android:paddingStart="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail"
                android:layout_alignParentRight="true"
                android:paddingRight="30dp"
                android:paddingTop="7dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/perusahaan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Perusahaan"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/usernamedistributor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Usernam Demonstrator"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/passworddistributor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Password Demonstrator"
            android:paddingStart="15dp" />

        <TextView
            android:id="@+id/btnPilihFoto"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:drawableStart="@drawable/uploadbtn"
            android:textSize="14sp"
            android:text="Upload Foto"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <ImageView
            android:id="@+id/foto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/fotodistributor"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnsubmit"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_btnsubmit" />

</RelativeLayout>