<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cakraagro.cakraagroindonesia.Activity.TentangKami.TambahAlamat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollIndicators="none">

        <LinearLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:src="@drawable/header" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center"
                android:text="TAMBAH ALAMAT"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/bg_dasboard" />

            <EditText
                android:id="@+id/namakantor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/custom_input"
                android:hint="Nama Kantor"
                android:paddingStart="15dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/custom_input"
                android:hint="Alamat"
                android:minLines="3"
                android:maxLines="10"
                android:padding="15dp"
                android:gravity="top" />

            <EditText
                android:id="@+id/telepon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="phone"
                android:background="@drawable/custom_input"
                android:hint="No Telephone"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/btnPilihFoto"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:drawableStart="@drawable/uploadbtn"
                android:textSize="16sp"
                android:text="Upload Foto"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/custom_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:id="@+id/foto"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btntambah"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="Submit"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/custom_btnsubmit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>