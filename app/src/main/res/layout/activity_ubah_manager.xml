<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cakraagro.cakraagroindonesia.Activity.KelolaDataMaster.TambahDataManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:text="UBAH DATA DISTRIBUTOR"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:background="@drawable/bg_dasboard"
            android:layout_marginBottom="25dp" />

        <EditText
            android:id="@+id/namamanager"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Nama Manager"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/usernamemanager"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Username Manager"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/passwordmanager"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Password Manager"
            android:paddingStart="15dp" />

        <TextView
            android:id="@+id/btnPilihFoto"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:drawableStart="@drawable/uploadbtn"
            android:textSize="14sp"
            android:text="Upload Foto"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/custom_button_input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <ImageView
            android:id="@+id/foto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/fotomanager"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnsubmit"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_btnsubmit" />

</RelativeLayout>