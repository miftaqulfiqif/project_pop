<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:baselineAligned="false"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imgjenisproduk"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bgprodukkami"
            android:gravity="center"
            android:text="PRODUK KAMI"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/btninsektisida"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:text="INSEKTISIDA"
            android:textSize="16dp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/btnfungsinida"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:text="FUNGISIDA"
            android:textSize="16dp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/btnherbisida"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:text="HERBISIDA"
            android:textSize="16dp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/btnpgr"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:text="PGR"
            android:textSize="16dp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</RelativeLayout>